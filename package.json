{
  "name": "thunderfat-backend-tools",
  "version": "1.0.0",
  "description": "Development tools and scripts for ThunderFat Spring Boot Backend",
  "private": true,
  "scripts": {
    "export-api": "bash scripts/export-api-spec.sh",
    "validate-api": "bash scripts/validate-api-spec.sh",
    "generate-sdk": "bash scripts/generate-sdk.sh",
    "release": "bash scripts/release.sh",
    "release:patch": "bash scripts/release.sh patch",
    "release:minor": "bash scripts/release.sh minor", 
    "release:major": "bash scripts/release.sh major",
    "release:dry-run": "bash scripts/release.sh patch dry-run",
    "lint-api": "spectral lint api/openapi.json",
    "diff-api": "openapi-diff api/openapi-previous.json api/openapi.json",
    "dev:export": "npm run export-api && npm run validate-api",
    "dev:full": "npm run export-api && npm run validate-api && npm run generate-sdk",
    "test:scripts": "bash -n scripts/*.sh",
    "setup": "npm install && chmod +x scripts/*.sh"
  },
  "devDependencies": {
    "@stoplight/spectral-cli": "^6.11.0",
    "openapi-diff": "^0.24.1",
    "openapi-typescript-codegen": "^0.25.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thunderfat/backend"
  },
  "keywords": [
    "thunderfat",
    "api",
    "openapi",
    "sdk",
    "tools",
    "nutrition",
    "healthcare"
  ],
  "author": "ThunderFat Team",
  "license": "MIT"
}
